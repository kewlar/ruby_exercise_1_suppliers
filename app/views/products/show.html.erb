<p id="notice"><%= notice %></p>

<h1>Product &quot;<%= @product %>&quot;</h1>

<div class="card">
  <div class="card-block">
    <p>
      <strong>EAN:</strong>
      <%= @product.ean %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Supplier:</strong>
      <%= link_to @product.supplier, @product.supplier %>
    </p>

    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-outline-success btn-sm' %>
  </div>
</div>

<%= link_to 'Back to product list', products_path, class: 'btn btn-link' %>
