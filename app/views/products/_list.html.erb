<table class="table table-hover">
  <thead>
  <tr>
    <th>Ean</th>
    <th>Description</th>
    <% unless local_assigns[:supplier_page] %>
      <th>Supplier</th>
      <th colspan="3"></th>
    <% else %>
      <th colspan="2"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% products.each do |product| %>
      <tr>
        <td><%= product.ean %></td>
        <td><%= product.description %></td>
        <% unless local_assigns[:supplier_page] %>
          <td><%= product.supplier %></td>
          <td><%= link_to 'Show', product %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
