<table class="table table-hover">
  <thead>
  <tr>
    <th>Ean</th>
    <th>Description</th>
    <% if !local_assigns[:hide_supplier] %>
      <th>Supplier</th>
    <% end %>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% products.each do |product| %>
      <tr>
        <td><%= product.ean %></td>
        <td><%= product.description %></td>
        <% if !local_assigns[:hide_supplier] %>
          <td><%= product.supplier %></td>
        <% end %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
